{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@notifications": ["libs/notifications/index.ts"],
      "@shared/*": ["libs/shared/*"],
      "@store": ["libs/store/index.ts"],
      "@users": ["libs/users/index.ts"],
      "@router": ["libs/router/index.ts"],
      "@app": ["libs/app/index.ts"],
      "@pages": ["libs/pages/index.ts"],
      "@pageEntries": ["libs/pageEntries/index.ts"],
      "@lists": ["libs/lists/index.ts"]
    }
  },
  "include": ["client/src", "server/src", "libs"],
  "exclude": ["node_modules"]
}
